<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.bradleyswizard" name="Bradleys Wizard" version="1.0" provider-name="Bradley">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Wizard intstaller</summary>
    <description lang="en">Installs the Bradleys build, apk's, speedtest, retro gaming</description>
    <platform>all</platform>
  </extension>
</addon>
